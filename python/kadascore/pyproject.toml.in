# Specify the build system.
[build-system]
requires = ["sip >=5.0.0, <7", "PyQt-builder >=1.6, <2"]
build-backend = "sipbuild.api"

# Specify the PEP 566 metadata for the project.
[tool.sip.metadata]
name = "KADAS"
version = "@KADAS_VERSION@"
summary = "Python bindings for KADAS"
home-page = "https://github.com/kadas-albireo/kadas-albireo2"
author = "Sandro Mani"
license = "GPL v2"
requires-dist = "PyQt5"
